# /etc/haproxy/haproxy.cfg
# HAProxy configuration to redirect HTTP to HTTPS

global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_in
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

frontend https_in
    bind *:443 ssl crt /etc/ssl/private/haproxy.pem
    default_backend web_servers

backend web_servers
    balance roundrobin
    server web-01 35.175.152.228 check
    server web-02 44.202.81.191 check
